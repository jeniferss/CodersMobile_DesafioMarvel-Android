<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".login.view.LoginActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dim_22_dp"
        android:layout_marginEnd="@dimen/dim_22_dp"
        app:layout_constraintVertical_bias="0.386"
        app:cardCornerRadius="@dimen/dim_15_dp"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textSize="@dimen/dim_23_sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/dim_30_dp"
            android:textColor="@color/colorWhite"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dim_15_dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="@dimen/dim_83_dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/colorPrimary"
                android:layout_marginEnd="@dimen/dim_18_dp"
                android:layout_marginStart="@dimen/dim_18_dp"
                android:layout_marginTop="@dimen/dim_54_dp"
                android:hint="@string/email">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColor="@color/colorGray"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/colorPrimary"
                android:layout_marginEnd="@dimen/dim_18_dp"
                android:layout_marginStart="@dimen/dim_18_dp"
                android:layout_marginTop="@dimen/dim_137_dp"
                android:hint="@string/senha">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textColor="@color/colorGray"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/remember"
                android:layout_marginTop="@dimen/dim_215_dp"
                android:textSize="@dimen/sim_24_sp"
                android:layout_marginStart="@dimen/dim_18_dp"
                android:layout_marginEnd="@dimen/dim_18_dp"
                android:textColor="@color/colorGray"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dim_296_dp"
                android:layout_marginStart="@dimen/dim_18_dp"
                android:layout_marginEnd="@dimen/dim_18_dp"
                android:text="@string/log_in"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dim_21_sp"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/btnCreateAccount"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dim_365_dp"
                android:textColor="@color/colorGray"
                android:text="@string/create_account"
                android:textSize="@dimen/sim_24_sp"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dim_30_dp"
                android:layout_height="wrap_content"/>

        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>