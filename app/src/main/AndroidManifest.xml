<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication.desafiomarvelandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".fullimage.view.FullImageActivity"></activity>
        <activity android:name=".detail.view.DetailActivity" />
        <activity
            android:name=".register.view.RegisterActivity"
            android:label="Register"
            android:theme="@style/AppThemeActionBar" />
        <activity android:name=".login.view.LoginActivity" />
        <activity android:name=".splashscreen.view.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home.view.MainActivity" />
    </application>

</manifest>